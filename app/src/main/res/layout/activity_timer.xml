<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9625f"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".TimerActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/timer_circle"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="计时器"
            android:textColor="#ffffff"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/timer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#ffffff"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/timer_btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="45dp"
                android:contentDescription="@string/player_start"
                android:src="@mipmap/player_start" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/timer_btn2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="45dp"
                android:contentDescription="@string/player_start"
                android:src="@mipmap/player_start" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方法2"
                android:textColor="#fff" />
        </LinearLayout>


        <ImageView
            android:id="@+id/timer_btn3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="45dp"
            android:contentDescription="@string/player_start"
            android:src="@mipmap/player_start" />

        <ImageView
            android:id="@+id/timer_btn4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="45dp"
            android:contentDescription="@string/player_start"
            android:src="@mipmap/player_start" />
    </LinearLayout>


    <TextView
        android:id="@+id/timer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textColor="#ffffff"
        android:textSize="45sp" />

</LinearLayout>